<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.file.filecloud.PinVerification"
    android:background="#13265C">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/resetPinTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Reset Pincode"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:textAllCaps="false"
                android:background="@color/transparent2"


                />

            <ImageView
                android:id="@+id/lockIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_lock"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"/>
            <TextView
                android:id="@+id/resultTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="260dp"
                android:text="WELCOME! Enter your Pincode"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                />

            <Button
                android:id="@+id/forgetPinTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="280dp"
                android:text="Forget Pincode?"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/transparent2"
                android:layout_below="@+id/l1"
                android:padding="5dp"
                />

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="300dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view_01"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_view_gray_ova"/>

                <View
                    android:id="@+id/view_02"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_view_gray_ova"
                    android:layout_marginStart="10dp"/>

                <View
                    android:id="@+id/view_03"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_view_gray_ova"
                    android:layout_marginStart="10dp"/>

                <View
                    android:id="@+id/view_04"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/bg_view_gray_ova"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="350dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    style="?android:attr/buttonBarStyle">


                    <Button
                        android:id="@+id/btn_01"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_circle03"
                        android:fontFamily="sans-serif-black"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        style="?android:attr/buttonBarStyle"
                        android:textSize="16sp" />
                    <Button
                        android:id="@+id/btn_02"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_circle03"
                        android:fontFamily="sans-serif-black"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        style="?android:attr/buttonBarStyle"
                        android:textSize="16sp"/>
                    <Button
                        android:id="@+id/btn_03"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_circle03"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        style="?android:attr/buttonBarStyle"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    style="?android:attr/buttonBarStyle">

                    <Button
                        android:id="@+id/btn_04"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_circle03"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        style="?android:attr/buttonBarStyle"
                        />
                    <Button
                        android:id="@+id/btn_05"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_circle03"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        style="?android:attr/buttonBarStyle"
                        />
                    <Button
                        android:id="@+id/btn_06"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_circle03"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        style="?android:attr/buttonBarStyle"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    style="?android:attr/buttonBarStyle">

                    <Button
                        android:id="@+id/btn_07"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_circle03"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        style="?android:attr/buttonBarStyle"
                        />

                    <Button
                        android:id="@+id/btn_08"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_circle03"
                        android:text="8"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        style="?android:attr/buttonBarStyle"
                        />
                    <Button
                        android:id="@+id/btn_09"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_circle03"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        style="?android:attr/buttonBarStyle"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    style="?android:attr/buttonBarStyle">

                    <Button
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        style="?android:attr/buttonBarStyle"
                        />
                    <Button
                        android:id="@+id/btn_00"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_circle03"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        style="?android:attr/buttonBarStyle"
                        />
                    <ImageButton
                        android:id="@+id/btn_clear"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_backspace"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        style="?android:attr/buttonBarStyle"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>